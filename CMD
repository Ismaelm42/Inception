docker build -t mariadb /home/fwks/Documentos/Inception/srcs/requirements/mariadb
docker build -t wordpress /home/fwks/Documentos/Inception/srcs/requirements/wordpress

docker network create "inception"

docker run --name mariadb --network inception -d mariadb
docker run --name wordpress --network inception -d wordpress
docker run --name nginx --network inception -p 443:443 -d nginx

(nginx se para si se lanza el primero ya que no encuentra wordpress)

docker exec -it wordpress /bin/bash

